modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PayPal Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Secure Server"

[[workflows.workflow]]
name = "PayPal Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python paypal_server.py"
waitForPort = 8080

[[workflows.workflow]]
name = "Secure Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python secure_server.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 8081
externalPort = 8081

[deployment]
deploymentTarget = "cloudrun"
